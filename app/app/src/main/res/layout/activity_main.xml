<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        layout="@layout/header"
        android:id="@+id/include_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        layout="@layout/nav"
        android:id="@+id/include_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

<!--    <TextView-->
<!--        android:id="@+id/textView2"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginStart="16dp"-->
<!--        android:layout_marginTop="68dp"-->
<!--        android:text="Leaderboard"-->
<!--        android:textStyle="bold"-->
<!--        android:textSize="20dp"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="@id/include_header" />-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="68dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/include_header">

        <!-- Leaderboard Title -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leaderboard"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="center_vertical" />

        <!-- Daily/Weekly/Monthly Tabs -->
        <LinearLayout
            android:id="@+id/date_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="60dp">

            <!-- Daily Tab -->

            <TextView
                android:id="@+id/tab_daily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp" />

            <!-- Separator -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:text="/"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <!-- Weekly Tab -->
            <TextView
                android:id="@+id/tab_weekly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weekly"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp" />

            <!-- Separator -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:text="/"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <!-- Monthly Tab -->
            <TextView
                android:id="@+id/tab_monthly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp" />

        </LinearLayout>
    </LinearLayout>

    <!-- Horizontal Divider -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/leaderboardRecyclerView"
        android:layout_width="413dp"
        android:layout_height="520dp"
        android:layout_marginTop="90dp"
        app:layout_constraintBottom_toBottomOf="@id/include_nav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/include_header"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>