<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="26dp"
    tools:context=".settings">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/konkhmer_sleokchher"
        android:text="More"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/changePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_outline"
        app:layout_constraintTop_toBottomOf="@+id/more">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginVertical="20dp"
            android:text="Change password"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/changePhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_outline"
        app:layout_constraintTop_toBottomOf="@+id/changePassword">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginVertical="20dp"
            android:text="Change Photo"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/changeEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_outline"
        app:layout_constraintTop_toBottomOf="@+id/changePhoto">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginVertical="20dp"
            android:text="Change Email"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/changeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_outline"
        app:layout_constraintTop_toBottomOf="@+id/changeEmail">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginVertical="20dp"
            android:text="Change Name"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/addEmployer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_outline"
        app:layout_constraintTop_toBottomOf="@+id/changeName">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginVertical="20dp"
            android:text="Add Employer"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/notificationSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_outline"
        app:layout_constraintTop_toBottomOf="@+id/addEmployer">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginVertical="20dp"
            android:text="Notifications"
            android:textSize="15sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/privacySettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_outline"
        app:layout_constraintTop_toBottomOf="@+id/notificationSettings">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginVertical="20dp"
            android:text="Privacy"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/signoutSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_outline"
        app:layout_constraintTop_toBottomOf="@id/privacySettings">

        <TextView
            android:id="@+id/btn_signout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="Sign Out"
            android:textSize="15sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>